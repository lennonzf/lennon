// Grid
.pb5#grid
%h2.light.text-blue Grid
.mb5
  %p Flexbox is the base of the grid layout. This site only goes as far as 3 columns.

  // 1
  .pb3#one-column
  %h3.light.text-grey-dark One Column
  .mb3
    .c1in1.card
      .card-header 100%
      .card-footer .c1in1

  // 2
  .pb3#two-columns
  %h3.light.text-grey-dark Two Columns
  .mb3
    .flex.flex-wrap.justify-between
      .c1in2.card
        .card-header 48%
        .card-footer .c1in2

      .c1in2.card
        .card-header 48%
        .card-footer .c1in2

  // 3
  .pb3#three-columns
  %h3.light.text-grey-dark Three Columns
  .mb3
    .flex.flex-wrap.justify-between
      .c1in3.card
        .card-header 32%
        .card-footer .c1in3

      .c1in3.card
        .card-header 32%
        .card-footer .c1in3

      .c1in3.card
        .card-header 32%
        .card-footer .c1in3

  // mix
  .pb3#mix
  %h3.light.text-grey-dark Mix
  .mb3
    .flex.flex-wrap.justify-between
      .c1in3.card
        .card-header 32%
        .card-footer .c1in3

      .c2in3.card
        .card-header 66%
        .card-footer .c2in3
